<h2>Results</h2>

<p>Found {{count}} matches!</p>
{{#each products}}
{{!-- <pre>{{this}}</pre> --}}
<h5>{{name}}</h5>
<h6>{{price}}$</h6>
<p>{{score}} star/s ({{voters}})</p>
<a href="/products/{{id}}">Link</a>

{{#if ../User}}
<form>
    <input type="hidden" name="product-id" value="{{id}}">
    <input type="hidden" name="store-id" value="{{store.id}}">
    <input type="text" name="amount">
    <button class="add-to-cart-btn">Add to cart</button>
</form>
{{/if}}

{{/each}}

{{#if User}}
<script src="/products/add-to-cart.js"></script>
{{/if}}